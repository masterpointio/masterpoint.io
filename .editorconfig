root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = double

[*.html]
indent_size = 2

[*.yaml]
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
